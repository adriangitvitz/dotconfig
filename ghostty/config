# font-family = IllinoisMono Nerd Font Mono Plus Material Design Icons
font-family = Maple Mono Normal
font-style = "bold"

cursor-style = bar
# Thicker cursor for better visibility with keratoconus visual distortions
adjust-cursor-thickness = 3

# Keratoconus optimizations
# Slightly larger for better readability
font-size = 20
# Better character definition
font-thicken = true
# Disable ligatures for clearer character separation (reduces ghosting confusion)
font-feature = -liga
# Increase line spacing to prevent overlapping text (keratoconus ghosting)
adjust-cell-height = 4
# Slight horizontal spacing to reduce character overlap
adjust-cell-width = 1
# WCAG AAA compliance
minimum-contrast = 7.0
# Solid background reduces eye strain (no transparency)
background-opacity = 1
# Disable blur for clarity
background-blur = false
# Extra padding to reduce edge crowding (helps with peripheral distortions)
window-padding-x = 10
window-padding-y = 10
# Keratoconus-friendly warm theme (no blue light)
theme = keratoconus-warm-amber
# Alternative themes (uncomment to try):
# theme = keratoconus-soft-orange
# theme = keratoconus-warm-yellow
# theme = dark:flexoki,light:flexoki
window-padding-balance = true 
window-save-state = always
macos-titlebar-style=transparent
# keybindings
keybind = cmd+s>r=reload_config
keybind = cmd+s>x=close_surface

keybind = cmd+s>n=new_window

# tabs 
keybind = cmd+s>c=new_tab
keybind = cmd+s>shift+l=next_tab
keybind = cmd+s>shift+h=previous_tab
keybind = cmd+s>comma=move_tab:-1
keybind = cmd+s>period=move_tab:1

# quick tab switch
keybind = cmd+s>1=goto_tab:1
keybind = cmd+s>2=goto_tab:2
keybind = cmd+s>3=goto_tab:3
keybind = cmd+s>4=goto_tab:4
keybind = cmd+s>5=goto_tab:5
keybind = cmd+s>6=goto_tab:6
keybind = cmd+s>7=goto_tab:7
keybind = cmd+s>8=goto_tab:8
keybind = cmd+s>9=goto_tab:9

# split
keybind = cmd+s>\=new_split:right
keybind = cmd+s>-=new_split:down

keybind = cmd+s>j=goto_split:bottom
keybind = cmd+s>k=goto_split:top
keybind = cmd+s>h=goto_split:left
keybind = cmd+s>l=goto_split:right

keybind = cmd+s>z=toggle_split_zoom

keybind = cmd+s>e=equalize_splits

# other
copy-on-select = clipboard

# Additional keratoconus optimizations
cursor-style-blink = false
mouse-hide-while-typing = true
bold-is-bright = false
# Keep unfocused splits solid to prevent additional ghosting artifacts
unfocused-split-opacity = 1.0
